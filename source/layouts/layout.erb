<!doctype html>

<%= partial "partials/html" %>

  <head>
    <meta charset="utf-8">

    <title><%= page_title %></title>

    <%= partial "partials/meta" %>
    <%= partial "partials/css" %>
    <%= partial "partials/js" %>
    <%= partial "partials/link" %>
    <link rel="stylesheet" type="text/css" href="//cdn.moot.it/1/moot.css">
  </head>
  
  <body class="page <%= page_classes %>">

    <header class="header" role="banner">

      <%= partial "partials/logo" %>

      <%= partial "partials/toggle--navigation" %>

      <%= partial "partials/navigation--primary" %>

    </header>

    <% hero_count = Dir["build/images/banners/*"].length %>
    <% hero_url = "/images/banners/hero" + (1..hero_count).to_a.sample.to_s.rjust(2, "0") + ".jpg" %>
    <div class="hero" style="background-image:url('<%= hero_url %>');"></div>

    <main class="main" role="main">
      <%= yield %>
    </main>

    <footer class="footer">
    </footer>

    <%= partial "partials/foot/js" %>

    <script src="https://cdn.moot.it/1/moot.min.js"></script>
  </body>
</html>
